@page "/"
@using Finbuckle.Website.Infrastructure.GitHubService
@inject GitHubService GitHubService

<PageTitle>Finbuckle Home</PageTitle>

<div class="container-fluid header">
    <div class="container py-5 text-light">
        <h1 class="display-6">
            <span class="fw-bold">increase</span> productivity<br/>
            <span class="fw-bold">reduce</span> cost<br/>
            <span class="fw-bold">simplify</span> maintenance<br/>
            with Finbuckle and .NET
        </h1>
        <a href="https://eepurl.com/hMcmw9" class="btn btn-light btn-lg text-primary" role="button"><i
                class="bi-envelope-at"></i> Subscribe for news and updates</a>
    </div>
</div>

<div class="container py-5 d-flex flex-column align-items-center">
    <p class="lead">Open source solutions for devs</p>
    <div class="pt-5 d-flex flex-wrap justify-content-evenly w-100 text-body-secondary">
        <div class="d-flex pb-5">
